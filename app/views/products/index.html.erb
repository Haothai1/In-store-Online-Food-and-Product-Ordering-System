<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <h1>Products</h1>

  <div class="mb-3">
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
    <%= link_to 'View Menu', menu_path, class: 'btn btn-secondary' %>
    <%= link_to 'View Store Items', store_path, class: 'btn btn-secondary' %>
  </div>

  <%= form_with(url: products_path, method: :get, local: true, data: { turbo_frame: "products" }, class: 'mb-4') do |form| %>
    <div class="d-flex">
      <%= form.text_field :query, placeholder: "Search products...", value: params[:query], class: 'form-control me-2' %>
      <%= form.submit "Search", class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>

  <%= turbo_frame_tag "products" do %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Stock Quantity</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= truncate(product.description, length: 100) %></td>
              <td><%= number_to_currency(product.price) %></td>
              <td><%= product.category %></td>
              <td><%= product.stock_quantity %></td>
              <td>
                <%= link_to 'Show', product_path(product), class: 'btn btn-sm btn-outline-dark', data: { turbo: false } %>
              </td>
              <td>
                <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-warning', data: { turbo: false } %>
              </td>
              <td>
                <%= button_to 'Delete', product_path(product), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
