<div class="container mt-4">
  <h1 class="mb-4">Your Cart</h1>

  <% if @cart.cart_items.empty? %>
    <div class="alert alert-info">Your cart is empty.</div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.cart_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= item.quantity %></td>
              <td><%= number_to_currency(item.product.price) %></td>
              <td><%= number_to_currency(item.product.price * item.quantity) %></td>
              <td>
                <%= button_to 'Remove', remove_item_cart_path(id: item.id), method: :delete, class: 'btn btn-sm btn-danger', form: { data: { turbo: true } } %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">Total:</th>
            <th><%= number_to_currency(@cart.total_price) %></th>
            <th></th>
          </tr>
        </tfoot>
      </table>
    </div>

    <% if @cart.all_items_in_stock? %>
      <%= button_to 'Checkout', checkout_cart_path, method: :post, class: 'btn btn-primary mt-3', data: { turbo: false, confirm: 'Are you sure you want to complete this purchase?' } %>
    <% else %>
      <div class="alert alert-warning mt-3">Some items are out of stock. Please update your cart before checking out.</div>
    <% end %>
  <% end %>
</div>
