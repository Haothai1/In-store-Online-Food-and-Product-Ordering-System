<h1>Welcome, <%= current_user.name %>!</h1>

<h2>Your Orders</h2>
<table>
  <thead>
    <tr>
      <th>Order Type</th>
      <th>Status</th>
      <th>Total Price</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_type %></td>
        <td><%= order.status %></td>
        <td><%= order.total_price %></td>
        <td><%= order.created_at.strftime("%B %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
