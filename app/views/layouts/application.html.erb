<!DOCTYPE html>
<html>
  <head>
    <title>FoodAndProductOrderingSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-controller="cart">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
          <%= link_to 'Ordering System', root_path, class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to 'Home', root_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'All Products', products_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Menu', menu_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Store', store_path, class: 'nav-link' %>
              </li>
            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to cart_path, id: 'cart-link', class: 'nav-link' do %>
                  <i class="bi bi-cart"></i> Cart (<span id="cart-count"><%= current_cart.cart_items.sum(:quantity) %></span>)
                <% end %>
              </li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Order History', order_history_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'My Profile', profile_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger', form_class: 'd-inline' %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <%= yield %>

  </body>
</html>
