<!DOCTYPE html>
<html>
  <head>
    <title>FoodAndProductOrderingSystem</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-controller="cart">
    <header>
      <nav data-controller="cart">
        <%= link_to 'Home', root_path %>
        <%= link_to 'All Products', products_path %>
        <%= link_to 'Menu', menu_path %>
        <%= link_to 'Store', store_path %>
        <%= link_to cart_path, id: 'cart-link' do %>
          Cart (<span id="cart-count"><%= current_cart.cart_items.sum(:quantity) %></span>)
        <% end %>
        <% if user_signed_in? %>
        <%= link_to 'Order History', order_history_path %>
          <%= link_to 'My Profile', profile_path %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Login', new_user_session_path %>
          <%= link_to 'Sign up', new_user_registration_path %>
        <% end %>
      </nav>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>

  </body>
</html>
