<h1>Menu</h1>

<%= form_with(url: menu_path, method: :get, local: true) do |form| %>
  <%= form.text_field :query, placeholder: "Search menu items...", value: params[:query] %>
  <%= form.submit "Search" %>
<% end %>

<div class="menu-items">
  <% @menu_items.each do |item| %>
    <div class="menu-item">
      <h2><%= item.name %></h2>
      <p><%= item.description %></p>
      <p class="price"><%= number_to_currency(item.price) %></p>
    </div>
  <% end %>
</div>
